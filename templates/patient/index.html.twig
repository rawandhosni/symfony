{% extends 'base.html.twig' %}

{% block title %}Patient index{% endblock %}

{% block body %}
    <h1>Patient index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Mail</th>
                <th>MotdePasse</th>
                <th>Telephone</th>
                <th>DateNaissance</th>
                <th>Adresse</th>
                <th>Role</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for patient in patients %}
            <tr>
                <td>{{ patient.id }}</td>
                <td>{{ patient.Nom }}</td>
                <td>{{ patient.Prenom }}</td>
                <td>{{ patient.Mail }}</td>
                <td>{{ patient.MotdePasse }}</td>
                <td>{{ patient.Telephone }}</td>
                <td>{{ patient.DateNaissance ? patient.DateNaissance|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ patient.adresse }}</td>
                <td>{{ patient.role }}</td>
                <td>
                    <a href="{{ path('app_patient_show', {'id': patient.id}) }}">show</a>
                    <a href="{{ path('app_patient_edit', {'id': patient.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_patient_new') }}">Create new</a>
{% endblock %}
