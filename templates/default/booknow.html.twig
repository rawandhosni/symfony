{% extends 'base.html.twig' %}

{% block content %}
    <section class="section-padding" id="booking" 
        style="background-image: url('/images/slider/doctor-s-hand-holding-stethoscope-closeup.jpg'); 
               background-size: cover; 
               background-position: center; 
               background-repeat: no-repeat; 
               position: relative;">

        <!-- Appliquer un flou via un overlay -->
        <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; 
                    background-image: url('/images/slider/doctor-s-hand-holding-stethoscope-closeup.jpg'); 
                    background-size: cover; 
                    background-position: center; 
                    filter: blur(8px); 
                    z-index: 1;">
        </div>

        <!-- Contenu clair -->
        <div class="container" style="position: relative; z-index: 2;">
            <div class="row">
                <div class="col-lg-8 col-12 mx-auto">
                    <div class="booking-form" 
                         style="background: rgba(255, 255, 255, 0.9); 
                                padding: 30px; 
                                border-radius: 10px; 
                                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);">
                        {{ form_start(form) }}
                            {{ form_widget(form) }}
                            <div style="text-align: center; margin-top: 20px;"> <!-- Centre le bouton -->
                                <a href="{{ path('popup_page') }}" class="btn btn-primary">
                                    {{ button_label|default('Book now!') }}
                                </a>
                                                            
                        {{ form_end(form) }}
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# Inclusion du fichier JS dans le template #}
    <script src="{{ asset('js/scripts.js') }}" defer></script>
{% endblock %}
